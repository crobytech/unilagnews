<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/abc_action_bar_default_padding_material"
    android:layout_margin="@dimen/abc_action_bar_subtitle_top_margin_material"
    android:minHeight="?android:attr/listPreferredItemHeight">

    <ImageView
        android:layout_width="0dp"
        android:id="@+id/news_list_item_icon"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:padding="@dimen/abc_action_bar_default_padding_material"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/news_list_item_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:id="@+id/news_list_item_date_added"/>

    </LinearLayout>

</LinearLayout>